[core]
    editor = vim
[diff]
    algorithm = histogram
[include]
    path = ~/.config/git/delta.config
[rerere]
    enabled = true
[column]
    ui = auto
[branches]
    sort = -committerdate
[alias]
    pushf = push --force-with-lease --force-if-includes
    commits = commit -S
    logs = log --show-signature
    st = status -s
[rebase]
    updateRefs = true
[pull]
    rebase = true
[init]
    defaultBranch = main

# include folder-specific settings
[include]
    path = ~/repos/.gitconfig
